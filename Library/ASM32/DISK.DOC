          call  fopen
          jc    fopen_problem
          mov   file_handle,ax  ; save for later

          mov   bx,ax           ; file handle
          mov   ecx,8           ; I want 8 bytes
          call  fget            ;  returned at [EBX]
          jc    read_problem    ; uh oh, trouble ...
          cmp   eax,ecx         ; did I get what I wanted?
