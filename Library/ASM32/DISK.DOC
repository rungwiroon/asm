         .
         .
         .
        mov    bx,output_handle
        push   ds
        pop    es
        lea    edi,data1              ; EDI -> data1
        mov    ecx,data_len           ; bytes to write
        call   fput
        call   fputcrlf               ; write CR+LF for new line
                                      ; in ASCII text file
        mov    al,26                  ; End-of-File byte (optional)
        call   fputchr


