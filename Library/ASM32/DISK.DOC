extrn   fcopy:near

include dataseg.inc

; data
        db 'b:'
source  db 'asm32cw.lib',0         ; copy the library to b:

@curseg	ends

include codeseg.inc

; code
        .
        .
        lea     esi,source
        mov     edi,esi               ; EDI also points to source
        sub     edi,2                 ; back the pointer to the 'B:'
        call    fcopy
        jc      oops



