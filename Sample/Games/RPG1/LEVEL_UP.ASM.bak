EXTRN	HERO_LEVEL:WORD		,HERO_MAX_HP:WORD	,HERO_HP:WORD
EXTRN	HERO_ATK:WORD		,HERO_DEF:WORD		,HERO_AGI:WORD
EXTRN	HERO_LIMIT:WORD
PUBLIC	LEVEL_UP
.MODEL	SMALL
.CODE
LEVELUP PROC	
	ADD	 HERO_LEVEL,1
	ADD	 HERO_MAX_HP,5
	MOV	 AX,HERO_MAX_HP
	MOV	 HERO_HP,AX
	ADD	 HERO_ATK,2
	ADD	 HERO_DEF,1
	ADD	 HERO_AGI,1	
	ADD	 HERO_LIMIT,5
	RET
LEVELUP ENDP
END